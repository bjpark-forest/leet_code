import numpy as np

class Solution:
    def countKDifference(self, nums: List[int], k: int) -> int:
        #for i in range(len(nums))
        a = np.array(nums).reshape(len(nums), 1)
        b = np.array(nums).reshape(1, len(nums))
        c = np.abs(a - b) # (n, n)
        out = np.sum(c == k)
        if k != 0:
            return out // 2
        else:
                return int(out - len(nums)) / 2
        
