class Solution:
    def arrangeCoins(self, n: int) -> int:
        # result = 0
        # _sum = 0
        # i = 1
        # while _sum <= n :
        #     _sum += i
        #     if _sum == n :
        #         return i
        #     i+=1
        # return i-2
        from math import sqrt,floor
        return floor((-1+sqrt(1+8*n))/2)
